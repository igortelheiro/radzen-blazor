@page "/stack"

<RadzenExample Name="Stack">
    <RadzenCard Class="my-4" style="display: flex; align-items: center; gap: 0.5rem">
        <div style="white-space:nowrap;">Orientation:</div>
        <RadzenDropDown @bind-Value="@orientation" TextProperty="Text" ValueProperty="Value"
                         Data="@(Enum.GetValues(typeof(Orientation)).Cast<Orientation>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        <div style="white-space:nowrap; margin-left: 16px;">AlignItems:</div>
        <RadzenDropDown @bind-Value="@alignItems" TextProperty="Text" ValueProperty="Value"
                         Data="@(Enum.GetValues(typeof(AlignItems)).Cast<AlignItems>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        <div style="white-space:nowrap; margin-left: 16px;">JustifyContent:</div>
        <RadzenDropDown @bind-Value="@justifyContent" TextProperty="Text" ValueProperty="Value"
                         Data="@(Enum.GetValues(typeof(JustifyContent)).Cast<JustifyContent>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        <div style="white-space:nowrap;margin-left: 16px">Spacing:</div>
        <RadzenTextBox @bind-Value="@spacing" />
        <div style="white-space:nowrap;margin-left: 16px">Reverse:</div>
        <RadzenSwitch @bind-Value="@reverse" />
    </RadzenCard>
    <RadzenCard class="p-0">
        <RadzenStack Orientation="@orientation" Spacing="@($"{spacing}px")" Reverse="@reverse" JustifyContent="@justifyContent" AlignItems="@alignItems" Style="height: 400px">
            <RadzenCard Class="p-1 rz-background-color-info rz-color-white rz-text-align-center">
                A
            </RadzenCard>
            <RadzenCard Class="p-1 rz-background-color-success rz-color-white rz-text-align-center" style="height: 40px; width: 40px;">
                B
            </RadzenCard>
            <RadzenCard Class="p-1 rz-background-color-warning rz-color-white rz-text-align-center" style="height: 60px; width: 60px;">
                C
            </RadzenCard>
            <RadzenCard Class="p-1 rz-background-color-danger rz-color-white rz-text-align-center" style="height: 80px; width: 80px;">
                D
            </RadzenCard>
        </RadzenStack>
    </RadzenCard>

</RadzenExample>
@code {
    Orientation orientation = Orientation.Horizontal;
    AlignItems alignItems = AlignItems.Normal;
    JustifyContent justifyContent = JustifyContent.Normal;
    string spacing = "10px";
    bool reverse;
}
